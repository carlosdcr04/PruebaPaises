<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llItemCountry"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp" >

        <TextView
            android:id="@+id/tvIdCountry"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNameCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_text_country"
            android:fontFamily="@font/gotham_book_regular"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ivCountrySelected"
                android:src="@drawable/img_selected"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>